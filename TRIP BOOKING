  <div id="toast" class="toast" role="status" aria-live="polite"></div>

  <script>
    const itineraries = {
      "Kashmir": [
        { day: 1, title: "Arrive Srinagar", items:["Shikara ride on Dal Lake","Check-in houseboat","Sunset at Boulevard Road"] },
        { day: 2, title: "Gulmarg Excursion", items:["Gondola Phase 1","Meadow walk","Kongdori viewpoint"] },
        { day: 3, title: "Pahalgam Day Trip", items:["Aru & Betaab Valley","Riverside café","Return to Srinagar"] },
        { day: 4, title: "Old City & Depart", items:["Hazratbal shrine","Handicraft bazaar","Airport drop"] },
      ],
      "Rajasthan": [
        { day: 1, title: "Jaipur Highlights", items:["Amber Fort","City Palace","Hawa Mahal"] },
        { day: 2, title: "Blue Jodhpur", items:["Mehrangarh Fort","Old city walk","Sardar Market"] },
        { day: 3, title: "Udaipur Lakes", items:["City Palace","Pichola boat ride","Saheliyon-ki-Bari"] },
        { day: 4, title: "Leisure & Depart", items:["Café hop","Local crafts","Depart"] },
      ],
      "Kerala": [
        { day: 1, title: "Munnar Tea Hills", items:["Tea museum","Eravikulam NP","Local dinner"] },
        { day: 2, title: "Munnar Viewpoints", items:["Top Station","Mattupetty Dam","Echo Point"] },
        { day: 3, title: "Alleppey Backwaters", items:["Houseboat cruise","Kerala meals onboard","Sunset" ] },
        { day: 4, title: "Kochi & Depart", items:["Fort Kochi walk","Chinese nets","Airport drop"] },
      ],
      "Mumbai": [
        { day: 1, title: "South Mumbai", items:["Gateway of India","Colaba Causeway","Marine Drive"] },
        { day: 2, title: "Cultural Trail", items:["Elephanta Caves","Kala Ghoda","Chowpatty"] },
        { day: 3, title: "Bandra & Beyond", items:["Street art","Bandra Fort","Sea Link views"] },
        { day: 4, title: "Markets & Depart", items:["Crawford Market","BKC cafés","Depart"] },
      ],
      "Kolkata": [
        { day: 1, title: "Colonial Core", items:["Victoria Memorial","Park Street","Nizam's Kathi Roll"] },
        { day: 2, title: "Ghats & Temples", items:["Howrah Bridge","Dakshineswar/Belur","Kumartuli"] },
        { day: 3, title: "Art & Coffee", items:["Indian Museum","College Street","Coffee House"] },
        { day: 4, title: "Markets & Depart", items:["New Market","Mishti trail","Depart"] },
      ]
    };

    const baseRates = { // per-person, per-night base in INR (Standard 4★)
      "Kashmir": 3800,
      "Rajasthan": 3600,
      "Kerala": 4200,
      "Mumbai": 4500,
      "Kolkata": 3300,
    };

    const planMultiplier = { budget: 0.85, standard: 1, luxury: 1.45 };
    const hotelMultiplier = { 3: 0.85, 4: 1, 5: 1.35 };

    // Utilities
    const byId = id => document.getElementById(id);
    function nightsBetween(a,b){
      const ms = new Date(b) - new Date(a);
      return Math.max(1, Math.ceil(ms / (1000*60*60*24)));
    }
    function toast(msg, ok=false){
      const el = byId('toast');
      el.textContent = msg;
      el.style.borderColor = ok ? '#22c55e55' : '#ffffff1f';
      el.classList.add('show');
      setTimeout(()=>el.classList.remove('show'), 3000);
    }
    function scrollToId(id){
      document.getElementById(id)?.scrollIntoView({behavior:'smooth', block:'start'});
    }

    // Accordion
    function toggleAcc(head){ head.parentElement.classList.toggle('open'); }

    // Render itinerary accordions for each destination
    function renderItineraries(){
      const wrap = byId('itineraryWrap');
      wrap.innerHTML = '';
      Object.keys(itineraries).forEach(place=>{
        const acc = document.createElement('div');
        acc.className = 'accordion';
        const item = document.createElement('div');
        item.className = 'acc-item';
        item.innerHTML = `
          <div class="acc-head" onclick="toggleAcc(this)">
            <strong>${place}</strong>
            <span class="mini">Click to view day-wise plan</span>
          </div>
          <div class="acc-body"></div>
        `;
        const body = item.querySelector('.acc-body');
        itineraries[place].forEach(d=>{
          const block = document.createElement('div');
          block.style.margin = '6px 0 12px';
          block.innerHTML = `<div style="font-weight:700">Day ${d.day}: ${d.title}</div>`+
            `<div class="mini">• ${d.items.join(' • ')}</div>`;
          body.appendChild(block);
        });
        acc.appendChild(item);
        wrap.appendChild(acc);
      });
    }

    // Jump to itinerary and select destination
    function jumpToItinerary(place){
      byId('destination').value = place;
      calcPrice();
      scrollToId('itineraries');
      toast(`Loaded ${place} itinerary`, true);
    }

    // Price calculation
    function calcPrice(){
      const dest = byId('destination').value;
      const start = byId('start').value;
      const end = byId('end').value;
      const a = parseInt(byId('adults').value||0,10);
      const c = parseInt(byId('children').value||0,10);
      const hotel = byId('hotel').value;
      const plan = byId('plan').value;

      let nights = (start && end) ? nightsBetween(start,end) : 3; // default
      const ppl = a + c*0.6; // children at 60%
      const base = baseRates[dest] || 3500;
      const price = nights * ppl * base * planMultiplier[plan] * hotelMultiplier[hotel];
      byId('totalPrice').textContent = isFinite(price) ? `₹${Math.round(price).toLocaleString('en-IN')}` : '₹—';
      return { price: Math.round(price), nights };
    }

    // Booking storage (localStorage)
    function loadBookings(){
      return JSON.parse(localStorage.getItem('gv_bookings')||'[]');
    }
    function saveBookings(rows){
      localStorage.setItem('gv_bookings', JSON.stringify(rows));
    }
    function renderBookings(){
      const tbody = document.querySelector('#bookingsTable tbody');
      const rows = loadBookings();
      tbody.innerHTML='';
      rows.forEach((r,i)=>{
        const tr = document.createElement('tr');
        tr.innerHTML = `
          <td>${r.id}</td>
          <td>${r.destination}</td>
          <td>${r.start} → ${r.end}</td>
          <td>${r.nights}</td>
          <td>${r.adults + (r.children||0)}</td>
          <td>${r.plan}</td>
          <td>${r.hotel}★</td>
          <td>₹${r.total.toLocaleString('en-IN')}</td>
          <td>
            <button class="chip" onclick="editBooking(${i})">Edit</button>
            <button class="chip" onclick="deleteBooking(${i})" style="border-color:#ff6b6b66;color:#ffb0b0">Delete</button>
          </td>
        `;
        tbody.appendChild(tr);
      })
    }
    function deleteBooking(i){
      const rows = loadBookings();
      rows.splice(i,1); saveBookings(rows); renderBookings();
      toast('Booking removed');
    }
    function editBooking(i){
      const r = loadBookings()[i];
      if(!r) return;
      byId('destination').value = r.destination;
      byId('start').value = r.start;
      byId('end').value = r.end;
      byId('adults').value = r.adults;
      byId('children').value = r.children;
      byId('hotel').value = r.hotel;
      byId('plan').value = r.plan;
      calcPrice();
      scrollToId('book');
      toast('Loaded booking into form', true);
    }

    // Form interactions
    ['destination','start','end','adults','children','hotel','plan'].forEach(id=>{
      byId(id).addEventListener('change', calcPrice);
      byId(id).addEventListener('input', calcPrice);
    });

    function resetForm(){
      byId('bookingForm').reset();
      byId('destination').value = 'Kashmir';
      byId('adults').value = 2;
      byId('children').value = 0;
      byId('hotel').value = 4;
      byId('plan').value = 'standard';
      byId('totalPrice').textContent = '₹—';
      toast('Form reset');
    }

    byId('bookingForm').addEventListener('submit', e=>{
      e.preventDefault();
      const dest = byId('destination').value;
      const start = byId('start').value;
      const end = byId('end').value;
      const adults = parseInt(byId('adults').value||0,10);
      const children = parseInt(byId('children').value||0,10);
      const hotel = parseInt(byId('hotel').value,10);
      const plan = byId('plan').value;
      if(!start || !end){ toast('Please select your dates'); return; }
      const { price, nights } = calcPrice();
      const id = 'GV' + Math.random().toString(36).slice(2,8).toUpperCase();
      const row = { id, destination: dest, start, end, nights, adults, children, plan, hotel, total: price };
      const rows = loadBookings(); rows.unshift(row); saveBookings(rows); renderBookings();
      toast(`Booked ${dest}! Ref: ${id}`, true);
      resetForm();
    });

    // Init
    (function init(){
      renderItineraries();
      renderBookings();
      byId('year').textContent = new Date().getFullYear();
      // sensible default dates: today +3 nights
      const today = new Date();
      const end = new Date(); end.setDate(today.getDate()+3);
      byId('start').valueAsDate = today;
      byId('end').valueAsDate = end;
      calcPrice();
    })();
  </script>
</body>
</html>
